<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/styleLog.css" />
    <script>
        function abrirPopup() {
          document.getElementById('popupCadastro').style.display = 'block';
        }
      
        function fecharPopup() {
          document.getElementById('popupCadastro').style.display = 'none';
        }
      
        // Fecha o modal ao clicar fora dele
        window.onclick = function(event) {
          const popup = document.getElementById('popupCadastro');
          if (event.target === popup) {
            fecharPopup();
          }
        }
      </script>
  </head>
  <body>
    <div class="container">
      <div class="logo">
        <img src="/imgs/logo.svg" alt="NextMed Logo" />
      </div>
      <div class="formulario">
        <h2>Login</h2>
        <form action="/login" method="POST">
          <label for="email">Email:</label>
          <input type="email" name="email" id="email" required />

          <label for="password">Senha:</label>
          <input type="password" name="password" id="password" required />

          <input type="submit" value="Entrar" />
          <input type="reset" value="Limpar campos" />
        </form>

        <button onclick="window.location.href='/Recoverpass'">
          Esqueci a senha
        </button>
        <button onclick="abrirPopup()">Cadastre-se</button>

        <div id="popupCadastro" class="popup">
          <div class="popup-conteudo">
            <span class="fechar" onclick="fecharPopup()">&times;</span>
            <h3>Escolha o tipo de cadastro:</h3>
            <button onclick="window.location.href='/createadmin'">
              Admin
            </button>
            <button onclick="window.location.href='/createnurse'">
              Enfermeira
            </button>
            <button onclick="window.location.href='/createdoctor'">
              MÃ©dico
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
